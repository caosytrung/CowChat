<?xml version="1.0" encoding="utf-8"?>
<com.example.mammam.cowchat.ui.custom.SnowFlakesLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/snowflakelayout"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <!--android:background="@drawable/bg_ac_chat"-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/blueLight"
            >

            <TextView
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/blackLight"
                android:layout_width="264dp"
                android:layout_height="match_parent"
                android:text="Name Friend"
                android:paddingRight="64dp"
                android:id="@+id/tvFullNameConv" />

            <TextView
                android:id="@+id/tvConvCall"
                android:layout_width="52dp"
                android:textColor="@color/blackLight"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16dp"
                />
            <TextView
                android:textColor="@color/blackLight"
                android:id="@+id/tvConvMenu"
                android:layout_width="52dp"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_height="match_parent"

                />
        </TableRow>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:id="@+id/rvConv"
            ></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue"/>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_weight="2.2">
            <TableRow
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                >
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:hint="Input your message"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/edtConv"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/bg_edt_mesaage"
                    />
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/blue"
                    android:textSize="20dp"
                    android:background="@drawable/bg_tv_sent"
                    android:gravity="center"
                    android:id="@+id/tvSentConv"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                >

                <TextView
                    android:textSize="16dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:layout_weight="1"
                    android:id="@+id/tvGalleryConv" />

                <TextView
                    android:textSize="16dp"
                    android:id="@+id/tvCameraConv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:layout_weight="1"
                    />
                <TextView
                    android:textSize="16dp"
                    android:id="@+id/tvFileConv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:layout_weight="1"
                    />
                <TextView
                    android:textSize="17dp"
                    android:id="@+id/tvDrawConv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#757575"
                    />

                <TextView
                    android:textSize="18dp"
                    android:textColor="#757575"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:id="@+id/tvNhanDanConv" />
                <TextView
                    android:layout_marginRight="32dp"
                    android:textSize="17dp"
                    android:id="@+id/tvInputConv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#757575"
                    />
            </TableRow>
        </LinearLayout>
    </LinearLayout>





</com.example.mammam.cowchat.ui.custom.SnowFlakesLayout>