<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackLight"
    android:id="@+id/lnContainer"
    >
    <com.example.mammam.cowchat.ui.custom.RippleBackground
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:id="@+id/rpIvCallTo"
        app:rb_color="@color/whiteLine"
        app:rb_radius="24dp"
        app:rb_rippleAmount="6"
        app:rb_duration="3000"
        android:background="@drawable/circle"
        android:paddingBottom="8dp"
        app:rb_scale="4">
        <com.example.mammam.cowchat.ui.custom.CircleImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:id="@+id/ivCallTo"
            android:layout_centerInParent="true"
            />

    </com.example.mammam.cowchat.ui.custom.RippleBackground>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Nguoi duoc goi"
        android:layout_gravity="center"
        android:textColor="@color/whiteDack"
        android:id="@+id/tvCallTo"
        android:textSize="24dp"
        />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="128dp"
        >
        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="Stop"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/btnStopCallTo"
           android:background="@drawable/bg_ic_hangup"
            />
    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTimeCaller"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Time"
        />
    <TableRow
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:id="@+id/tvVolumeCaller"
            android:textColor="@color/whiteDack"
            android:gravity="center"
            android:textSize="25dp"
            android:background="@drawable/bg_voice_tv"
            android:layout_marginRight="8dp"

            />

        <TextView
            android:layout_marginLeft="8dp"
            android:textSize="25dp"
            android:layout_width="46dp"
            android:gravity="center"
            android:layout_height="46dp"
            android:id="@+id/tvVoiceCaller"
            android:textColor="@color/whiteDack"
            android:background="@drawable/bg_voice_tv"
            />
    </TableRow>


</LinearLayout>