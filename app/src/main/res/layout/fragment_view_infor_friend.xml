<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.example.mammam.cowchat.ui.custom.CircleImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="centerCrop"
            android:src="@drawable/def_avatar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:id="@+id/ivAvatarViewInfor" />

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="32dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@+id/tvRelation"
                android:background="@drawable/bg_tv_relation"
                android:text="Bạn bè"/>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone"
                android:id="@+id/progressRelative"
                />
        </RelativeLayout>
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/tabInforUser"
            android:layout_marginTop="8dp"
            android:background="@color/blue">

        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/vpgInforUSer"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>


    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressInforfriend"
        android:layout_centerHorizontal="true"
        android:padding="164dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="true"/>

</RelativeLayout>