<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:gravity="right"
    >

    <TextView
        android:background="@drawable/bg_item_listview_type_1"
        android:layout_marginTop="16dp"
        android:id="@+id/tvSmsType1"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="Trung dai ca nhat tren doi ahihihi"
        android:paddingTop="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="4dp"
        />

    <com.example.mammam.cowchat.ui.custom.CircleImageView
        android:id="@+id/ivAvatarType1"
        android:layout_width="46dp"
        android:padding="6dp"
        android:layout_gravity="top|right"
        android:layout_height="46dp"
        android:src="@drawable/default_avatar"/>

</LinearLayout>