    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="right"
    >

    <TextView
        android:background="@drawable/bg_item_listview_type_1"
        android:layout_marginTop="16dp"
        android:id="@+id/tvSmsType5"
        android:textSize="16dp"
        android:textColor="@color/blueDarck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="Trung dai ca nhat tren doi ahihihi"
        android:paddingTop="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="8dp"
        />

    <com.example.mammam.cowchat.ui.custom.CircleImageView
        android:layout_width="46dp"
        android:padding="6dp"
        android:layout_gravity="top|right"
        android:layout_height="46dp"
        android:id="@+id/ivAvatarType5"
        android:src="@drawable/default_avatar"/>



