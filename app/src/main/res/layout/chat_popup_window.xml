<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/snowflakelayout"
    android:isScrollContainer="false"
    android:layout_height="match_parent"
    android:background="#99000000">

    <LinearLayout
        android:id="@+id/lnR"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:isScrollContainer="false"
        android:layout_marginRight="4dp"
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:background="@drawable/bg_dialog_chat"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="64dp"
            >

            <TextView
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/blackLight"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:text="Name Friend"
                android:paddingRight="64dp"
                android:id="@+id/tvFullNameConvPopup" />

            <TextView
                android:id="@+id/tvConvCallPopup"
                android:layout_width="52dp"
                android:textColor="@color/blackLight"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16dp"
                />
            <TextView
                android:textColor="@color/blackLight"
                android:id="@+id/tvConvMenuPopUp"
                android:layout_width="52dp"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_height="match_parent"

                />
        </TableRow>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            android:layout_weight="8"
            android:id="@+id/rvConvPopup"
            ></android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/bg_search"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_weight="2.2">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                >

                <TextView
                    android:textSize="16dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#757575"
                    android:layout_weight="1"
                    android:id="@+id/tvGalleryConvPopup" />


                <TextView
                    android:textSize="17dp"
                    android:id="@+id/tvDrawConvPopup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#757575"
                    />

                <TextView
                    android:textSize="18dp"
                    android:textColor="#757575"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:id="@+id/tvNhanDanConvPopup" />
                <TextView
                    android:layout_marginRight="32dp"
                    android:textSize="17dp"
                    android:id="@+id/tvInputConvPopup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#757575"
                    />
            </TableRow>
            <TableRow
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                >
                <EditText
                    android:isScrollContainer="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:hint="Input your message"
                    android:layout_marginLeft="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/edtConvPopup"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/bg_edt_mesaage"
                    />
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/blue"
                    android:textSize="20dp"
                    android:background="@drawable/bg_tv_sent"
                    android:gravity="center"
                    android:id="@+id/tvSentConvPopup"
                    />
            </TableRow>

        </LinearLayout>
    </LinearLayout>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fabMenuPopup"
        fab:fab_expandDirection="down"
        android:layout_marginTop="70dp"
        android:layout_toLeftOf="@+id/lnR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        fab:fab_addButtonSize="mini"
        fab:fab_addButtonColorNormal="@color/black"
        fab:fab_addButtonColorPressed="@color/white"
        fab:fab_labelStyle="@style/menu_labels_style"
        >

    </com.getbase.floatingactionbutton.FloatingActionsMenu>



</RelativeLayout>