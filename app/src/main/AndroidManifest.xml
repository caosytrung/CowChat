            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
        <service android:name=".service.ServiceCall"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAo0dpuji24jKkCBzBNhZhsLpI8qSldbGw"
            />
